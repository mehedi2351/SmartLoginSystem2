<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="553.0" prefWidth="850.0"
            style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smartloginsystem.StudentRegisterController">

    <!-- Main Container -->
    <Pane prefHeight="500.0" prefWidth="850.0">
        <!-- Background with subtle pattern -->
        <Rectangle fill="linear-gradient(to bottom right, #f8fafc, #e2e8f0)" height="553.0" width="850" />

        <!-- Main Content Card -->
        <Pane layoutX="100" layoutY="50" prefHeight="400" prefWidth="650" style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 25, 0, 0, 8);">

            <!-- Left Side - Branding -->
            <Pane prefHeight="400" prefWidth="325" style="-fx-background-color: linear-gradient(to bottom, #2563eb, #3b82f6); -fx-background-radius: 16 0 0 16;">
                <VBox alignment="CENTER" layoutX="40" layoutY="80" prefWidth="245" spacing="18.0">
                    <!-- Logo -->
                    <ImageView fitHeight="150.0" fitWidth="150.0" preserveRatio="true">
                        <image>
                            <Image url="@log.png" />
                        </image>
                    </ImageView>

                    <!-- System Title -->
                    <VBox alignment="CENTER" spacing="2.0">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Supervisor" />
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Management" />
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="System" />
                    </VBox>

                    <!-- Description -->
                    <!-- <Label style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9); -fx-alignment: center; -fx-wrap-text: true;"
                    text="Professional management platform for team supervision and performance tracking" -->
                </VBox>
            </Pane>

            <!-- Right Side - Registration Form -->
            <Pane layoutX="325" layoutY="-38.0" prefHeight="438.0" prefWidth="325">
                <VBox alignment="TOP_CENTER" layoutX="25" layoutY="40" prefWidth="275" spacing="20">
                    <!-- Header -->
                    <VBox alignment="CENTER" prefHeight="31.0" prefWidth="262.0" spacing="5">
                        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" text="Create Account" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #64748b;" text="Register as Student" />
                    </VBox>

                    <!-- Form -->
                    <VBox alignment="CENTER_LEFT" prefWidth="275" spacing="12">
                        <!-- Username Field -->
                        <VBox alignment="CENTER_LEFT" spacing="5">
                            <Label style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #475569;" text="Username" />
                            <TextField fx:id="usernameField" prefHeight="39.0" prefWidth="270.0" promptText="Enter your username" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cbd5e1; -fx-padding: 0 12; -fx-font-size: 14;">
                                <font>
                                    <Font name="Segoe UI" size="14.0" />
                                </font>
                            </TextField>
                        </VBox>

                        <!--                        &lt;!&ndash; Email Field &ndash;&gt;-->
                        <!--                        <VBox alignment="CENTER_LEFT" spacing="5">-->
                        <!--                            <Label style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #475569;" text="Email" />-->
                        <!--                            <TextField fx:id="emailField" prefHeight="42.0" prefWidth="261.0" promptText="Enter your email" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cbd5e1; -fx-padding: 0 12; -fx-font-size: 14;">-->
                        <!--                                <font>-->
                        <!--                                    <Font name="Segoe UI" size="14.0" />-->
                        <!--                                </font>-->
                        <!--                            </TextField>-->
                        <!--                        </VBox>-->

                        <!-- Password Field -->
                        <VBox alignment="CENTER_LEFT" spacing="5">
                            <Label style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #475569;" text="Password" />
                            <PasswordField fx:id="passwordField" prefHeight="38.0" prefWidth="275.0" promptText="Enter your password" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cbd5e1; -fx-padding: 0 12; -fx-font-size: 14;">
                                <font>
                                    <Font name="Segoe UI" size="14.0" />
                                </font>
                            </PasswordField>
                        </VBox>

                        <!-- Confirm Password Field -->
                        <VBox alignment="CENTER_LEFT" spacing="5">
                            <Label style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #475569;" text="Confirm Password" />
                            <PasswordField fx:id="confirmPasswordField" prefHeight="38.0" prefWidth="275.0" promptText="Confirm your password" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cbd5e1; -fx-padding: 0 12; -fx-font-size: 14;">
                                <font>
                                    <Font name="Segoe UI" size="14.0" />
                                </font>
                            </PasswordField>
                        </VBox>

                        <!-- Terms Agreement -->
                        <HBox alignment="CENTER_LEFT" spacing="8">
                            <CheckBox style="-fx-text-fill: #64748b; -fx-font-size: 13px;" text="I agree to terms and conditions" />
                        </HBox>

                        <!-- Register Button -->
                        <Button onAction="#handleRegister" prefHeight="42.0" prefWidth="275.0" style="-fx-background-color: #2563eb; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14;" text="Create Account">
                            <font>
                                <Font name="Segoe UI" size="14.0" />
                            </font>
                        </Button>

                        <!-- Login Link -->
                        <HBox alignment="CENTER" prefHeight="10.0" prefWidth="275.0" spacing="3.0" style="-fx-padding: 10 0 0 0;">
                            <Label style="-fx-text-fill: #64748b; -fx-font-size: 13px;" text="Already have an account?" />
                            <Button onAction="#goToLogin" style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-font-weight: 600; -fx-padding: 0; -fx-font-size: 13px;" text="Sign in" />
                        </HBox>
                    </VBox>
                </VBox>
            </Pane>
        </Pane>

        <!-- Footer -->
        <HBox alignment="CENTER" layoutY="470" prefWidth="850" spacing="10">
            <Label style="-fx-text-fill: #64748b; -fx-font-size: 12px;" />
            <Rectangle fill="#cbd5e1" height="12.0" width="1.0" />
            <Rectangle fill="#cbd5e1" height="12.0" width="1.0" />
        </HBox>
    </Pane>

</AnchorPane>
