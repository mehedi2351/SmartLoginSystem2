<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<!-- Root: StackPane ensures centering automatically -->
<StackPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f1f5f9;"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.smartloginsystem.StudentRegisterController">

    <!-- Main Card Container -->
    <!-- Fixed max size ensures it doesn't stretch weirdly on full screen -->
    <HBox alignment="CENTER" maxHeight="550.0" maxWidth="850.0"
          prefHeight="500.0" prefWidth="850.0"
          style="-fx-background-color: white; -fx-background-radius: 16;">

        <effect>
            <DropShadow blurType="GAUSSIAN" height="40.0" radius="19.5" width="40.0">
                <color>
                    <Color opacity="0.10" />
                </color>
            </DropShadow>
        </effect>

        <!-- Left Side: Branding (Blue Area) -->
        <VBox alignment="CENTER" prefWidth="320.0" spacing="20.0"
              style="-fx-background-color: linear-gradient(to bottom, #2563eb, #3b82f6); -fx-background-radius: 16 0 0 16;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <ImageView fitHeight="140.0" fitWidth="140.0" preserveRatio="true">
                <image>
                    <!-- Ensure the image path is correct -->
                    <Image url="@log.png" />
                </image>
            </ImageView>

            <VBox alignment="CENTER" spacing="2.0">
                <Label text="Supervisor" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>
                <Label text="Management" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>
                <Label text="System" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>
            </VBox>
        </VBox>

        <!-- Right Side: Registration Form -->
        <VBox alignment="CENTER" prefWidth="530.0" spacing="20.0" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>

            <!-- Header -->
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="Create Account" textFill="#1e293b">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>
                <Label text="Register as Student" textFill="#64748b">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Input Fields -->
            <VBox spacing="15.0" maxWidth="400.0">

                <!-- Username -->
                <VBox spacing="5.0">
                    <Label text="Username" textFill="#475569">
                        <font>
                            <Font name="Segoe UI Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" prefHeight="40.0" promptText="Enter your username"
                               style="-fx-background-radius: 8; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-padding: 0 12; -fx-background-color: #f8fafc;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </TextField>
                </VBox>

                <!-- Password -->
                <VBox spacing="5.0">
                    <Label text="Password" textFill="#475569">
                        <font>
                            <Font name="Segoe UI Bold" size="13.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Enter your password"
                                   style="-fx-background-radius: 8; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-padding: 0 12; -fx-background-color: #f8fafc;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </PasswordField>
                </VBox>

                <!-- Confirm Password -->
                <VBox spacing="5.0">
                    <Label text="Confirm Password" textFill="#475569">
                        <font>
                            <Font name="Segoe UI Bold" size="13.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="confirmPasswordField" prefHeight="40.0" promptText="Confirm your password"
                                   style="-fx-background-radius: 8; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-padding: 0 12; -fx-background-color: #f8fafc;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </PasswordField>
                </VBox>

                <!-- Terms Checkbox -->
                <CheckBox text="I agree to terms and conditions" textFill="#64748b">
                    <font>
                        <Font size="13.0" />
                    </font>
                </CheckBox>
            </VBox>

            <!-- Actions -->
            <VBox spacing="10.0" alignment="CENTER" maxWidth="400.0">
                <Button onAction="#handleRegister" prefHeight="45.0" prefWidth="Infinity"
                        style="-fx-background-color: #2563eb; -fx-background-radius: 8; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;"
                        text="Create Account">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Button>

                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="Already have an account?" textFill="#64748b">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                    <Button onAction="#goToLogin"
                            style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-font-weight: bold; -fx-padding: 0; -fx-cursor: hand;"
                            text="Sign in">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Button>
                </HBox>
            </VBox>

        </VBox>
    </HBox>
</StackPane>