<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="700" style="-fx-background-color: #f9f9f9;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.smartlogin.HomeController">

    <!-- Left Logo Section -->
    <AnchorPane layoutX="0" layoutY="0" prefHeight="400" prefWidth="300" style="-fx-background-color: #ff7043;">
        <ImageView fx:id="logoView" fitHeight="180" fitWidth="180" layoutX="60" layoutY="80" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@xy.png" />
            </image>
        </ImageView>
        <Label layoutX="55" layoutY="280" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
    </AnchorPane>

    <!-- Right Side Buttons -->
    <VBox alignment="CENTER" layoutX="380" layoutY="100" spacing="25">
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Select Your Panel" />
        <Button fx:id="studentBtn"  styleClass="menu-btn" text="Student Panel" />
        <Button fx:id="teacherBtn"  styleClass="menu-btn" text="Teacher Panel" />
    </VBox>

</AnchorPane>
