<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="TOP_LEFT" spacing="15" prefWidth="400" prefHeight="300"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.smartloginsystem.popupcontroller"
      style="-fx-background-color:white; -fx-padding:20;">

    <Label fx:id="studentLabel" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
    <Label fx:id="titleLabel" />
    <Label fx:id="teacherLabel" />
    <Label fx:id="statusLabel" style="-fx-text-fill:#2E7D32;"/>

    <Button text="Close" onAction="#closeWindow"
            style="-fx-background-color:#E53935; -fx-text-fill:white; -fx-background-radius:10;"/>
</VBox>
