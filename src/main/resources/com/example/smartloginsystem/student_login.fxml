<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<!-- StackPane ensures the content stays centered -->

<StackPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f1f5f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.smartloginsystem.StudentLoginController">

    <!-- Main Content Card -->
    <!-- FIX: maxWidth এবং maxHeight ফিক্সড করে দেওয়া হয়েছে এবং alignment CENTER করা হয়েছে -->
    <HBox alignment="CENTER" maxHeight="500.0" maxWidth="800.0" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white; -fx-background-radius: 20;">

        <effect>
            <DropShadow blurType="GAUSSIAN" height="40.0" radius="19.5" width="40.0">
                <color>
                    <Color opacity="0.15" />
                </color>
            </DropShadow>
        </effect>

        <!-- Left Side: Branding Section -->
        <VBox alignment="CENTER" prefWidth="380.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom right, #2563eb, #1d4ed8); -fx-background-radius: 20 0 0 20;">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <ImageView fitHeight="120.0" fitWidth="120.0" preserveRatio="true">
                <image>
                    <Image url="@log.png" />
                </image>
            </ImageView>
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="SUPERVISOR" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>
                <Label text="MANAGEMENT SYSTEM" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI SemiBold" size="18.0" />
                    </font>
                </Label>
            </VBox>
            <Label text="Secure &amp; Efficient Team Management" textFill="#e2e8f0" wrapText="true">
                <font>
                    <Font name="Segoe UI" size="14.0" />
                </font>
            </Label>
        </VBox>

        <!-- Right Side: Login Form -->
        <VBox alignment="CENTER_LEFT" prefWidth="420.0" spacing="25.0" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
            </padding>

            <!-- Header -->
            <VBox spacing="5.0">
                <Label text="Welcome Back!" textFill="#1e293b">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="Please enter your details to sign in." textFill="#64748b">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Label>
            </VBox>

            <!-- Inputs -->
            <VBox spacing="15.0">
                <VBox spacing="8.0">
                    <Label text="Username" textFill="#475569">
                        <font>
                            <Font name="Segoe UI Bold" size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" prefHeight="45.0" promptText="Type your username" style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </TextField>
                </VBox>

                <VBox spacing="8.0">
                    <Label text="Password" textFill="#475569">
                        <font>
                            <Font name="Segoe UI Bold" size="13.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" prefHeight="45.0" promptText="Type your password" style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </PasswordField>
                </VBox>
            </VBox>

            <!-- Actions -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <CheckBox mnemonicParsing="false" style="-fx-text-fill: #64748b;" text="Remember me" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="13.0" />
                    </font>
                </CheckBox>
                <AnchorPane HBox.hgrow="ALWAYS" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-padding: 0; -fx-cursor: hand;" text="Forgot Password?">
                    <font>
                        <Font name="Segoe UI Bold" size="13.0" />
                    </font>
                </Button>
            </HBox>

            <!-- Login Button -->
            <Button onAction="#handleLogin" prefHeight="45.0" prefWidth="Infinity" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(37, 99, 235, 0.2), 10, 0, 0, 4);" text="Sign In">
                <font>
                    <Font name="Segoe UI Bold" size="15.0" />
                </font>
            </Button>

            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5.0">
                <Label text="Don't have an account?" textFill="#64748b">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
                <Button onAction="#handleRegister" style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-font-weight: bold; -fx-padding: 0; -fx-cursor: hand;" text="Create an account">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </HBox>
</StackPane>
