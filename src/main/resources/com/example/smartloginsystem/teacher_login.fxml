<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<!-- Root: StackPane to center content automatically -->
<?import javafx.scene.layout.Pane?>
<StackPane alignment="CENTER" prefHeight="600.0" prefWidth="900.0"
           style="-fx-background-color: #f8fafc;"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.smartloginsystem.TeacherLoginController">

    <!-- Main Card Container -->
    <!-- Fixed Max Size ensures the card doesn't stretch too much -->
    <HBox alignment="CENTER" maxHeight="500.0" maxWidth="850.0"
          prefHeight="500.0" prefWidth="850.0"
          style="-fx-background-color: white; -fx-background-radius: 16;">

        <effect>
            <DropShadow blurType="GAUSSIAN" height="40.0" radius="19.5" width="40.0">
                <color>
                    <Color opacity="0.10" />
                </color>
            </DropShadow>
        </effect>

        <!-- Left Side - Branding (Brown Theme) -->
        <VBox alignment="CENTER" prefWidth="340.0" spacing="20.0"
              style="-fx-background-color: linear-gradient(to bottom, #8B4513, #A0522D); -fx-background-radius: 16 0 0 16;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <!-- Logo -->
            <ImageView fitHeight="140.0" fitWidth="140.0" preserveRatio="true">
                <image>
                    <Image url="@log.png" />
                </image>
            </ImageView>

            <!-- System Title -->
            <VBox alignment="CENTER" spacing="2.0">
                <Label text="Supervisor" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>
                <Label text="Management" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>
                <Label text="System" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>
            </VBox>
        </VBox>

        <!-- Right Side - Login Form -->
        <VBox alignment="CENTER" prefWidth="510.0" spacing="20.0" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
            </padding>

            <!-- Header -->
            <VBox alignment="CENTER" spacing="8.0">
                <Label text="Teacher Login" textFill="#1e293b">
                    <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                    </font>
                </Label>
                <Label text="Access your teaching dashboard" textFill="#64748b">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Label>
                <!-- Decorative Line -->
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#8B4513" height="3.0" width="50.0" />
            </VBox>

            <!-- Inputs -->
            <VBox spacing="15.0" maxWidth="350.0">
                <!-- Username Field -->
                <VBox spacing="5.0">
                    <Label text="TEACHER ID" textFill="#475569">
                        <font>
                            <Font name="Segoe UI Bold" size="12.0" />
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" prefHeight="45.0" promptText="Enter your teacher ID"
                               style="-fx-background-radius: 8; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-padding: 0 12; -fx-background-color: #ffffff;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </TextField>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="5.0">
                    <Label text="PASSWORD" textFill="#475569">
                        <font>
                            <Font name="Segoe UI Bold" size="12.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" prefHeight="45.0" promptText="Enter your password"
                                   style="-fx-background-radius: 8; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-padding: 0 12; -fx-background-color: #ffffff;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </PasswordField>
                </VBox>

                <!-- Options Row -->
                <HBox alignment="CENTER_LEFT">
                    <CheckBox text="Remember me" textFill="#64748b" HBox.hgrow="ALWAYS">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </CheckBox>
                    <Pane/> <!-- Spacer -->
                    <Button text="Forgot Password?"
                            style="-fx-background-color: transparent; -fx-text-fill: #8B4513; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 13px; -fx-padding: 0;" />
                </HBox>

                <!-- Login Button -->
                <Button onAction="#handleLogin" prefHeight="45.0" prefWidth="Infinity"
                        text="Access Dashboard" textFill="WHITE"
                        style="-fx-background-color: linear-gradient(to right, #8B4513, #A0522D); -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 14px;">
                    <effect>
                        <DropShadow color="#8b451340" height="10.0" radius="4.5" width="10.0" />
                    </effect>
                </Button>
            </VBox>

            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5.0" style="-fx-border-color: #e2e8f0; -fx-border-width: 1 0 0 0; -fx-padding: 15 0 0 0;">
                <Label text="New to the system?" textFill="#64748b">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
                <Button onAction="#goToRegister" text="Request Access"
                        style="-fx-background-color: transparent; -fx-text-fill: #8B4513; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 0; -fx-font-size: 13px;" />
            </HBox>

        </VBox>
    </HBox>

    <!-- Footer (Optional, stuck to bottom) -->
    <VBox alignment="BOTTOM_CENTER" maxHeight="-Infinity" spacing="5.0" StackPane.alignment="BOTTOM_CENTER">
        <padding>
            <Insets bottom="10.0" />
        </padding>
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Â© 2024 Teacher Portal System v2.1" textFill="#94a3b8">
                <font><Font size="11.0"/></font>
            </Label>
            <Rectangle fill="#cbd5e1" height="10.0" width="1.0" />
            <Label text="Academic Use Only" textFill="#94a3b8">
                <font><Font size="11.0"/></font>
            </Label>
        </HBox>
    </VBox>

</StackPane>